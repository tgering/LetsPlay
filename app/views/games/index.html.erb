<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading lead">Games</div>
  <table class="table">
    <thead>
      <tr>
        <th>Sport</th>
        <th>Date</th>
        <th>Location</th>
        <th>Creator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @games.each do |game| %>

        <tr>

          <td><%= game.sport %></td>
          <td><%= game.date %></td>
          <td><%= game.location %></td>
          <td><%= game.creator %></td>
          <td><%= game.attendees %></td>
          <td><a href="/games/<%=game.id%>">More Info</a></td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>

<a href="/games/new"> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> New Game</a>
